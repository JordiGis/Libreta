<!-- public/index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Vue App</title>
    
    <!-- Incluir Vue.js desde un CDN -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <link rel="stylesheet" href="/css/estilo.css">
</head>
<body>
    <main id="app">
        <!-- Contenido de Vue irá aquí -->
        <h1>{{ message }}</h1>
        <h1>{{ titulo }}</h1>

    </main>

    <script>
        const SHOULD_SHOW_MODAL = true;
        // Crear una nueva instancia de Vue
        new Vue({
            // Indicar el elemento HTML donde se montará la instancia de Vue
            el: '#app',
            // Propiedades de la instancia de Vue
            data: {
                titulo: `<%= datosParaVue.titulo %>`,
                message: `<%= datosParaVue.mensaje %>`,
                isModalVisible: SHOULD_SHOW_MODAL
            },
            methods: {
                closeModal() {
                    this.isModalVisible = false;
                    localStorage.setItem('modalClosed', 'true');
                }
            }
        });
    </script>
</body>
</html>
